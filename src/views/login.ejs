<body>
  <!-- TITLE -->
  <div class="container title">
    <h1></h1>
    <hr />
  </div>

  <div class="container login">
    <h2>Create account</h2>
    <div class="form">
      <form name="signup" action="/auth/signup" method="post">
        <p>username: <input name="username" id="username" /><br /></p>
        <p>password: <input name="password" id="password" /><br /></p>
        <input type="submit" value="SIGN UP" class="submit" />
      </form>
    </div>
    <br />

    <h2 class="">Log in</h2>
    <div class="form">
      <form name="signup" action="/auth/login" method="post">
        <p>username: <input name="username" id="username" /><br /></p>
        <p>password: <input name="password" id="password" /><br /></p>
        <input type="submit" value="LOGIN" class="submit" />
      </form>
    </div>

    <a href="/"><h2>back</h2></a>
  </div>
